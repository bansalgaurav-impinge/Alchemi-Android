<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/app_bg"
    android:fillViewport="true"
    android:padding="@dimen/_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/_10dp"
        android:layout_marginBottom="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivTermIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/earn_terms_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/tvTermName"
                style="@style/TextView_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three_months_terms"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">
                <TextView
                    android:id="@+id/tvAssetsName1"
                    style="@style/TextView_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three_months_terms" />
                <ImageView
                    android:id="@+id/ivLock"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_lock"
                    android:padding="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:tint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/tvAssetsName1"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ends in 79 Days"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"
                    style="@style/TextView_style"
                    android:layout_toEndOf="@+id/ivLock"
                    android:layout_below="@+id/tvAssetsName1"
                    android:textColor="@color/colorGrey" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$3,360.41"
                    style="@style/TextView_style"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:includeFontPadding="true"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/colorLightBlack">
                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foregroundGravity="center"
                    android:maxHeight="50dp"
                    android:padding="1dp"
                    android:src="@drawable/acx"
                    app:tint="@color/colorGrey"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivIcon"
                    android:maxWidth="150dp"
                    android:padding="@dimen/_10dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tvCoin"
                        style="@style/TextView_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Alchemi.com Coin"
                        />
                    <TextView
                        android:id="@+id/tvCoinName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_style"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorGrey"
                        android:layout_below="@+id/tvCoin"
                        android:text="6% P.A." />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCoinAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView_style"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/colorGrey"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="10,000 ACO"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDarkGrey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:includeFontPadding="true"
                android:minHeight="55dp"
                android:background="@drawable/allocation_card_bg_bottom">
                <TextView
                    style="@style/TextView_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:text="@string/total_earnings" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    style="@style/TextView_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:ellipsize="end"
                    android:includeFontPadding="true"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:text="70,745.00 ACO"
                    android:textColor="@color/colorGrey"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <include layout="@layout/recycler_view"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>