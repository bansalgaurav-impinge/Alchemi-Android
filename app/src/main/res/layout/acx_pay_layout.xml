<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/app_bg"
    android:fillViewport="true"
    android:paddingTop="@dimen/_20dp"
    android:paddingBottom="@dimen/_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_20dp"
        android:paddingStart="@dimen/_20dp">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_icon"
            app:tint="@color/colorGrey"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_10dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingStart="@dimen/_20dp"
            android:paddingEnd="@dimen/_20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/stroke_btn_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acx"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
            <TextView
                style="@style/TextView_style_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/pay"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorYellow" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/ivScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_scan"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/tvScan"
                    style="@style/TextView_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/scan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20dp">
            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/tvSend"
                    style="@style/TextView_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/send"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tvRefer"
            style="@style/TextView_style_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="@string/refer_and_get_25_usd"
            android:layout_marginStart="5dp"
            android:background="@drawable/earn_minus_bg"
            android:backgroundTint="@color/colorYellow"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="@dimen/_10dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingStart="@dimen/_20dp"
            android:paddingEnd="@dimen/_10dp"
            android:visibility="gone"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tvReferView"
            style="@style/TextView_style_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:background="@color/colorYellow"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20dp">
            <LinearLayout
                android:id="@+id/llGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_bg"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gift"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:maxWidth="60dp"
                        android:maxHeight="60dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:id="@+id/tvGiftTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refer_alchemi_to_friends"
                        android:layout_marginStart="15dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        <TextView
            style="@style/TextView_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transactions"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_bg">
            <include layout="@layout/recycler_view"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>