<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="none"
    android:id="@+id/view"
    android:background="@drawable/app_bg">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/outer_padding"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llTop"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/onBoardingTutorialPager">
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            style="@style/ButtonText_style_normal"
            android:gravity="center"
            android:textColor="@color/colorYellow"
            android:text="@string/skip"/>
    </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/onBoardingTutorialPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/llBottoms"
            android:minHeight="@dimen/default_viewpager_height" />
        <LinearLayout
            android:id="@+id/llBottoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="@dimen/_20dp">
            <com.app.alchemi.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                app:dotsColor="@color/black"
                app:dotsStrokeWidth="1dp"
                app:dotsCornerRadius="7dp"
                app:dotsSize="22dp"
                app:dotsSpacing="2dp"
                app:dotsWidthFactor="1.5"
                android:layout_marginBottom="7dp"
                app:selectedDotColor="@color/colorYellow"
                app:progressMode="false">
            </com.app.alchemi.DotsIndicator>
        <TextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal"
            style="@style/ButtonText_style_yellow"
            android:layout_marginBottom="@dimen/_10dp"
            android:text="@string/continue_txt"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>