<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/app_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        style="@style/TextView_style_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/trade"
        android:textSize="18sp"/>
    <include layout="@layout/recycler_view"/>
    <TextView
        style="@style/TextView_style_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spend"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_10dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/CvPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:minHeight="60dp"
        android:layout_marginTop="7dp"
        app:cardBackgroundColor="@color/colorLightBlack"
        android:background="@color/colorLightBlack">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp">
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pay"
            android:padding="2dp"
            app:tint="@color/colorGrey"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay"
            style="@style/TextView_style"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivIcon" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forward_arrow"
            android:padding="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:tint="@color/colorGrey"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        style="@style/TextView_style_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finance"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_10dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cvEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:minHeight="60dp"
        android:layout_marginTop="7dp"
        app:cardBackgroundColor="@color/colorLightBlack"
        android:background="@color/colorLightBlack">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_10dp">
            <ImageView
                android:id="@+id/ivIconFinance"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/earn"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earn"
                style="@style/TextView_style"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivIconFinance" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/forward_arrow"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:tint="@color/colorGrey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        style="@style/TextView_style_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_10dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:minHeight="60dp"
        android:layout_marginTop="7dp"
        app:cardBackgroundColor="@color/colorLightBlack"
        android:background="@color/colorLightBlack">
        <RelativeLayout
            android:id="@+id/rlReferralCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp">
            <ImageView
                android:id="@+id/ivIconRefer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/refer"
                android:padding="2dp"
                app:tint="@color/colorGrey"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refer"
                style="@style/TextView_style"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivIconRefer" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/forward_arrow"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:tint="@color/colorGrey"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:background="@drawable/fill_btn_bg"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_plus"
                    android:padding="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/tvBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:paddingStart="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="@string/buy"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke_btn_bg">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/account_yellow"
                    android:padding="2dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/tvAlchemiWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    style="@style/ButtonText_style"
                    android:paddingStart="2dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="@string/alchemi_wallet"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>