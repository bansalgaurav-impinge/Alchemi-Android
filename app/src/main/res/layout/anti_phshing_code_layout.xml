<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@drawable/app_bg"
    android:scrollbars="none"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:padding="@dimen/outer_padding"
        android:layout_marginBottom="@dimen/_20dp">
        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvSave"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingTop="@dimen/_20dp"
            android:paddingBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_style_large"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="@string/create_anti_phishing_code"
                android:paddingStart="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGrey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_style"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:text="@string/by_setting_up_anti_phishing_code"
                android:paddingStart="15dp"
                android:textAlignment="center"
                android:textColor="@color/colorGrey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_style"
                android:text="@string/enter_aniti_phishing_code"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp" />
            <EditText
                android:id="@+id/etAntiPhishingCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editText_style"
                android:text=""
                android:hint="12537XhwnsXSgklTm234vsikZlow6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autofillHints=""
                android:maxLength="30"
                android:inputType="text" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            style="@style/ButtonText_style_yellow"
            android:text="@string/save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>