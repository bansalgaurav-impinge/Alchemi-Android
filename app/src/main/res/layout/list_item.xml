<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:minHeight="55dp"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/rlLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="7dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tvCoin"
                style="@style/TextView_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:layout_marginStart="5dp"
                android:textColor="@color/colorGrey"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:maxWidth="150dp" />
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvCoin"
                android:src="@drawable/ccp_ic_arrow_drop_down"
                app:tint="@color/colorGrey"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/tvCoinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_style"
                android:layout_marginStart="7dp"
                android:layout_toStartOf="@+id/tvCoinAmountVariation"
                android:textSize="14sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:text="$123455"
                android:minWidth="60dp"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tvCoinAmountVariation"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:includeFontPadding="true"
                style="@style/TextView_style"
                android:layout_marginStart="7dp"
                android:textColor="@color/colorRed"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:maxLines="1"
                android:foregroundGravity="center"
                android:ellipsize="end"
                android:background="@color/colorRedBg"
                android:layout_alignParentEnd="true"
                android:text="-8.81%"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
