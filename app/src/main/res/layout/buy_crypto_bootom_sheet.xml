<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="2dp"
    android:elevation="@dimen/_10dp"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:focusable="true"
    android:minHeight="300dp"
    android:clickable="true"
    android:background="@drawable/card_round_shape"
    app:layout_behavior="@string/bottom_sheet_behavior">
        <RelativeLayout
            android:id="@+id/rlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:padding="15dp"
                style="@style/TextView_style_large"
                android:layout_centerVertical="true"
                android:text="@string/buy_alchemi_currency"
                android:textAlignment="center"
                android:includeFontPadding="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivCrossIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/close_icon"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBottomSheetBg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="@dimen/_20dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorBottomSheetSearchView">
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/editText_style"
                    android:layout_marginTop="0dp"
                    android:text=""
                    android:hint="@string/alchemi_currency"
                    android:drawableEnd="@drawable/ic_search"
                    android:maxLength="25"
                    android:background="@drawable/et_stroke_bg"
                    android:textColorHint="@color/colorDarkGrey"
                    android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:autofillHints="@string/alchemi_currency" />
            </LinearLayout>
            <include layout="@layout/recycler_view" />
        </LinearLayout>
</LinearLayout>